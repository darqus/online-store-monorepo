# Server
PORT=5000
SECRET_KEY=supersecretchangeme
NODE_ENV=development

# Choose either DATABASE_URL or discrete DB_* vars
# DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DBNAME

# Discrete DB vars (for local dev)
DB_DIALECT=postgres
DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=online_store
DB_USER=postgres
DB_PASSWORD=postgres
# DB_SSL=false

# CORS (comma-separated origins or *)
CORS_ORIGINS=*

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=500

# Body and upload limits
JSON_LIMIT=1mb
FILE_SIZE_LIMIT=5242880

# Storage
STORAGE_DRIVER=local
# For S3/MinIO set:
# S3_ENDPOINT=http://localhost:9000
# S3_REGION=us-east-1
# S3_BUCKET=online-store
# S3_ACCESS_KEY_ID=admin
# S3_SECRET_ACCESS_KEY=admin123
# S3_FORCE_PATH_STYLE=true
